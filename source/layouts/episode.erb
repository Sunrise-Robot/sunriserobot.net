<% current_show = blog.options.prefix.gsub("/", "") %>
<% @show = data.shows[current_show] %>
<!DOCTYPE html>
<html lang="en">
  <%= partial "layouts/head" %>
  <body>
  <%= partial "layouts/header" %>
    <section class="subheader"> <!-- Episode header -->
      <div class="container">
        <div class="row">
          <div class="col-sm-5 col-md-4">
            <a href="/<%= @show["stub"] %>"><img class="img-responsive" src="/images/<%= @show["album_art"]%>"/></a>
          </div>
          <div class="col-sm-7 col-md-8">
            <p class="episode-date">#<%= current_article.data.number %> - <%= current_article.date.strftime("%B %-d, %Y")  %></p>
            <h1 class="episode-title"><%= current_article.title %></h1>
            <p class="episode-desc"><%= current_article.data.description %></p>
            <p><audio controls preload src="http://www.podtrac.com/pts/redirect.mp3/<%= current_article.data.enclosure_link.gsub("http://", "") %>"> <br>
            </audio>
            <p><% if @show["itunes"] %><a href="<%= @show["itunes"] %>" class="btn btn-itunes" role="button" onclick="ga('send', 'event', 'subscribe_button', 'click', 'iTunes', 1);"><i class="fa fa-music"></i> iTunes</a> <% end %><a href="pcast://sunriserobot.net/<%= @show["stub"] %>/feed.xml" class="btn btn-rss" role="button" onclick="ga('send', 'event', 'subscribe_button', 'click', 'RSS', 1);"><i class="fa fa-rss"></i> RSS</a></p>
          </div>
        </div>
      </div>
    </section> <!-- End episode header -->

    <section class="main-content"> <!-- Show Notes & Sidebar -->
      <div class="container">
        <div class="row clearfix">
          <article class="col-sm-7 col-md-8 col-sm-push-5 col-md-push-4"> <!-- Show Notes column -->
            <h2>Show Notes</h2>
            <div class="show-notes">
              <%= yield %>
            </div>
            <h4>Share this episode</h4>
            <ul class="list-inline discuss-links">
              <li><a href="https://twitter.com/share?text=<%= current_article.title %>%20@sunriserobot%20%23podcast&url=http://sunriserobot.net<%= current_article.url %>" class="btn btn-twitter" onclick="ga('send', 'event', 'share_button', 'click', 'twitter', 1);"><i class="fa fa-twitter fa-lg fa-fw"></i></a></li>
              <li><a href="https://www.facebook.com/sharer/sharer.php?u=http://sunriserobot.net<%= current_article.url %>" class="btn btn-facebook" onclick="ga('send', 'event', 'share_button', 'click', 'facebook', 1);"><i class="fa fa-facebook fa-lg fa-fw"></i></a></li>
              <li><a href="https://plus.google.com/share?url=http://sunriserobot.net<%= current_article.url %>" class="btn btn-google" onclick="ga('send', 'event', 'share_button', 'click', 'gplus', 1);"><i class="fa fa-google-plus fa-lg fa-fw"></i></a></li>
            </ul>
            <p class="back-to-episode-list"><a href="/<%= @show["stub"] %>"><i class="fa fa-angle-left fa-fw"></i> back to full episode list</a></p>
          </article> <!-- End Show Notes -->

          <hr class="hidden-sm hidden-md hidden-lg"/> <!-- horizontal rule for mobile only -->
          <%= partial "layouts/host_sidebar" %>
        </div>

      </div>
    </section> <!-- End of Show Notes & Sidebar -->
  <%= partial "layouts/footer" %>

  <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
  </body>
</html>
