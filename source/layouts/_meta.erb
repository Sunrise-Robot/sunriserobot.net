<meta charset="UTF-8"> <!-- This and the next tag were already in the page html, make sure we don't duplicate -->
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="Sunrise Robot - shows for designers, technologists, musicians and all-around culture enthusiasts." />
<meta name="author" content="Sunrise Robot, LLC." />
<meta name="keywords" content="Sunrise Robot" />
<meta name="copyright" content="Copyright (c) 2015 Sunrise Robot, LLC." />

<!-- Schema.org markup for Google+ -->
<meta itemprop="name" content="<% if current_article %>
    <%= "#{@show["title"]} ##{current_article.data.number}: #{current_article.title} | " %>
    <% elsif @show %>
    <%= "#{@show["title"]} | " %>
    <% end %>
    Sunrise Robot">
<meta itemprop="description" content="<% if current_article %>
    <%= current_article.data.description %>
    <% elsif @show %>
    <%= @show["description"] %>
    <% else %>
    Sunrise Robot - shows for designers, technologists, musicians and all-around culture enthusiasts.
    <% end %>">
<meta itemprop="image" content="<% if @show %>
<%= "http://sunriserobot.net/images/#{@show["prefix"]}/#{@show["prefix"]}_social.jpg" %><% end %>">

<!-- Twitter Card -->
<meta name="twitter:card" content="summary"> <!-- this is the card type, do not edit -->
<meta name="twitter:site" content="@sunriserobot">
<meta name="twitter:title" content="<% if current_article %>
    <%= "#{@show["title"]} ##{current_article.data.number}: #{current_article.title} | " %>
    <% elsif @show %>
    <%= "#{@show["title"]} | " %>
    <% end %>
    Sunrise Robot"> <!-- e.g. "Flipping Tables | Sunrise Robot" for main show page or "Flipping Tables | #52: Shit that Smells" for episode page -->
<meta name="twitter:creator" content="@sunriserobot"> <!-- Since we aren't having show-specific twitter accounts, just keep this as sunrise robot -->
<meta name="twitter:url" content="<% if current_article %>
<%= "http://sunriserobot.net/#{current_article.url}" %>
<% elsif @show %>
<%= "http://sunriserobot.net/#{@show["prefix"]}" %>
<% else %>
http://sunriserobot.net<% end %>">
<meta name="twitter:description" content="<% if current_article %>
    <%= current_article.data.description %>
    <% elsif @show %>
    <%= @show["description"] %>
    <% else %>
    Sunrise Robot - shows for designers, technologists, musicians and all-around culture enthusiasts.
    <% end %>">
<meta itemprop="description" content="<% if current_article %>
    <%= current_article.data.description %>
    <% elsif @show %>
    <%= @show["description"] %>
    <% else %>
    Sunrise Robot - shows for designers, technologists, musicians and all-around culture enthusiasts.
    <% end %>"> <!-- Depending on page, input either the Sunrise Robot description, show description, or episode description. -->
<meta name="twitter:image" content="<% if @show %>
<%= "http://sunriserobot.net/images/#{@show["prefix"]}/#{@show["prefix"]}_social.jpg" %><% end %>">

<!-- Open Graph -->
<meta property="og:title" content="<% if current_article %>
    <%= "#{@show["title"]} ##{current_article.data.number}: #{current_article.title} | " %>
    <% elsif @show %>
    <%= "#{@show["title"]} | " %>
    <% end %>
    Sunrise Robot" />
<meta property="og:description" content="<% if current_article %>
    <%= current_article.data.description %>
    <% elsif @show %>
    <%= @show["description"] %>
    <% else %>
    Sunrise Robot - shows for designers, technologists, musicians and all-around culture enthusiasts.
    <% end %>">
<meta itemprop="description" content="<% if current_article %>
    <%= current_article.data.description %>
    <% elsif @show %>
    <%= @show["description"] %>
    <% else %>
    Sunrise Robot - shows for designers, technologists, musicians and all-around culture enthusiasts.
    <% end %>" />
<meta property="og:type" content="website" />
<meta property="og:image" content="<% if @show %>
<%= "http://sunriserobot.net/images/#{@show["prefix"]}/#{@show["prefix"]}_social.jpg" %><% end %>" />
<% if current_article %>
<meta property="og:audio" content="<%= current_article.data.enclosure_link %>" /> <!-- For episode pages only, open graph item for the mp3 file? Include next tag as well if using this. -->
<meta property="og:audio:type" content="audio/mpeg" />
<% end %>
<meta property="og:url" content="<% if current_article %>
<%= "http://sunriserobot.net/#{current_article.url}" %>
<% elsif @show %>
<%= "http://sunriserobot.net/#{@show["prefix"]}" %>
<% else %>
http://sunriserobot.net<% end %>" />
<meta property="og:locale" content="en_US" />
<meta property="og:site_name" content="Sunrise Robot" />
<meta property="og:email" content="hello@sunriserobot.net" />

